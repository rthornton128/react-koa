{
  "name": "react-koa",
  "version": "1.0.0",
  "description": "React app served by Koa",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack --mode development && node ./src/server.js",
    "test": "jest --watchAll=false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rthornton128/react-koa.git"
  },
  "keywords": [
    "react",
    "koa"
  ],
  "author": "Rob Thornton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rthornton128/react-koa/issues"
  },
  "homepage": "https://github.com/rthornton128/react-koa#readme",
  "dependencies": {
    "@popperjs/core": "^2.11.0",
    "bootstrap": "^5.0.0",
    "koa": "^2.13.4",
    "koa-compress": "^5.1.0",
    "koa-static": "^5.0.0",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.3",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@testing-library/react": "^12.1.2",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.4.5",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "html-loader": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.4",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "sass": "^1.44.0",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.s?css$": "<rootDir>/mocks/styleMock.js"
    },
    "transform": {
      "\\.jsx?$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env"
            ],
            [
              "@babel/preset-react",
              {
                "runtime": "automatic"
              }
            ]
          ]
        }
      ]
    }
  },
  "prettier": {}
}
